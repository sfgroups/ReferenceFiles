apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: webserver-green
spec:
  replicas: 2
  template:
    metadata:
      labels:
        type: webserver
        color: green
    spec:
      containers:
      - image: nginx:1.13.0
        name: webserver-container
        ports:
        - containerPort: 80
          name: http-server
      nodeSelector:        
        svrtype: web